
.content {
	background-color: #F1F0F6;
}
.info-wrapper {
	position: relative;
	margin-bottom: 12rpx;
	padding: 10rpx 40rpx;
	background-color: #fff;
}
.info-wrapper2 {
	padding: 10rpx 30rpx;
}
.info-wrapper2 {
	text-align: center;
}
.bicycle-img {
	width: 180rpx;
	height: 180rpx;
	vertical-align: top;
	margin-top: 30rpx;
}
.bicycle-info {
	display: inline-block;
	margin-left: 50rpx;
	padding: 10rpx 0;
	font-size: 28rpx;
}
.bicycle-info>view {
	margin-bottom: 10rpx;
}
.bicycle-name {
	font-size: 34rpx;
}
.start-time,
.end-time {
	position: absolute;
	top: 44rpx;
	display: inline-block;
	/* background-color: pink; */
}
.start-time {
	left: 40rpx;
}
.end-time {
	right: 40rpx;
}
.date {
	font-size: 34rpx;
}
.time {
	margin-top: 10rpx;
	font-size: 30rpx;
}
.rent-time {
	display: inline-block;
	margin: 20rpx 0;
}
.arrow-right {
	width: 320rpx;
	height: 20rpx;
}
.info-wrapper3 {
	padding: 40rpx;
	font-size: 30rpx;
}
.info-wrapper3>view {
	margin-bottom: 18rpx;
}
.right-text {
	float: right;
}
.btn-wrapper {
	margin-top: 40rpx;
	text-align: center;
}
.btn-wrapper>button {
	margin: 0 auto 24rpx;
	width: 60%;
	border-radius: 12rpx;
}
.help-text {
	font-size: 26rpx;
}
.info-wrapper0 {
	text-align: center;
	padding: 20rpx 0;
}
.result-text {
	font-size: 30rpx;
	font-weight: 600;
}
.icon-zhengque,
.icon-cuowu {
	margin-right: 10rpx;
	font-size: 36rpx;
}
.icon-cuowu {
	color: #EA4142;
}

